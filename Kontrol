using System;
using System.Collections.Generic;
using System.Windows.Forms;

namespace veri_tabanı_deneme
{
    class kontrol
    {
       public static int id;
      public static void sutunlar(List<int>liste,int gelen_deger)
        {
            id = gelen_deger;
            
            if(kontrol_tekrar(liste, gelen_deger)== true)
            {

                liste.Add(gelen_deger);
                Console.WriteLine(gelen_deger);
                   
            }
            else
            { MessageBox.Show("eklemeye çalıştığınız değer mevcut");
                id++;
                liste.Add(id);
            }

        }
       public static bool kontrol_tekrar(List<int> liste, int yeni_eklenen)
        { 
            for(int i=0;i<liste.Count;i++)
            {
                if(liste[i]==yeni_eklenen)
                {
                    Console.WriteLine(liste[i].ToString());
                    return false;  
                }  
            }
            return true;
        }
        
    }
}
